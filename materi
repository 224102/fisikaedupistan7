  <script>
    const btn=document.getElementById("scrollTopBtn");
    window.onscroll=function(){btn.style.display=(document.body.scrollTop>100||document.documentElement.scrollTop>100)?"block":"none";};
    btn.onclick=function(){window.scrollTo({top:0,behavior:"smooth"});};
  </script>
